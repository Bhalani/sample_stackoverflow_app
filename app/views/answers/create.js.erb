<% if @answer.id %>
  $("#answers").prepend("<%= escape_javascript(render partial: '/answers/show', locals: { answer: @answer, question: @question } )%>");
  $("#add-answer").html("<%= escape_javascript(render partial: '/answers/new', locals: { answer: @answer_init, question: @question }) %>");
<% else %>
  $("#add-answer").html("<%= escape_javascript(render partial: '/answers/new', locals: { answer: @answer, question: @question }) %>");
<% end %>
