<% if @answer.errors.present? %>
  $("#answer_<%= @answer.id %>").html("<%= escape_javascript(render partial: '/answers/new', locals: { answer: @answer, question: @question }) %>");
<% else %>
  $("#answer_<%= @answer.id %>").html("<%= escape_javascript(render partial: '/answers/show', locals: { answer: @answer, question: @question } )%>");
  $("#add-answer").show();
  $("#add-answer").html("<%= escape_javascript(render partial: '/answers/new', locals: { answer: @answer_init, question: @question }) %>");
<% end %>